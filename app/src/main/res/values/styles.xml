<resources>
    <!-- Chế độ sáng -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar"> <!-- Sử dụng Theme.MaterialComponents -->

        <!-- Màu cho AppBar -->
        <item name="colorPrimary">@color/primary</item> <!-- Màu xanh cho AppBar -->
        <item name="colorPrimaryVariant">#3700B3</item> <!-- Màu đậm cho AppBar khi mở rộng -->
        <item name="colorOnPrimary">@android:color/white</item> <!-- Chữ màu trắng trên AppBar -->

        <!-- Màu Accent -->
        <item name="colorAccent">#03DAC5</item> <!-- Màu accent -->

        <!-- Màu nền chung của ứng dụng -->
        <item name="android:windowBackground">@color/background_light</item>

        <!-- Màu chữ chính của ứng dụng -->
        <item name="android:textColorPrimary">@color/text_primary</item>

    </style>
</resources>
